{
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:prettier/recommended" // Ensures ESLint configures itself to be compatible with Prettier
  ],
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module"
  },
  "env": {
    "browser": true,
    "node": true
  },
  "rules": {
    // Code-quality and potential error rules can remain.
    // Formatting rules that conflict with Prettier should be removed.
    "no-console": "error",
    "no-unused-vars": {
      "argsIgnorePattern": "^_",
      "varsIgnorePattern": "^_",
      "caughtErrors": "all",
      "args": "after-used",
      "ignoreRestSiblings": true
    },
    "no-undef": "error"
    // Removed: indent, linebreak-style, quotes, semi, max-len, as Prettier will handle these
  }
}
