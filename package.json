{
  "name": "kanban-board-bot",
  "version": "1.0.0",
  "description": "A bot for a lightweight kanban board",
  "main": "bot.ts",
  "scripts": {
    "start": "node dist/bot.js",
    "dev": "nodemon --watch . -e ts --exec \"ts-node ./bot.ts\"",
    "build": "tsc && npm run clean:js",
    "build:modern": "tsc -p tsconfig.modern.json",
    "start:modern": "node dist/src/bot.js",
    "dev:modern": "nodemon --watch src -e ts --exec \"ts-node src/bot.ts\"",
    "clean": "rimraf dist build lib",
    "clean:js": "find . -name '*.js' -not -path './node_modules/*' -not -path './dist/*' -not -path './minimal_dist/*' -delete || true",
    "lint": "eslint . --ext .ts",
    "test": "echo 'Tests will be added here'",
    "deploy": "npm run build && npm run start"
  },
  "scripts-minimal": {
    "build:minimal": "tsc -p minimal/tsconfig.minimal.json",
    "dev:minimal": "nodemon --watch minimal -e ts --exec \"ts-node ./minimal/bot.ts\""
  },
  "author": "Sean Lee",
  "contributors": [
    "Brian M. <innovate@RWD.com>"
  ],
  "license": "MIT",
  "dependencies": {
    "@discordjs/rest": "^2.0.0",
    "@discordjs/ws": "^1.0.0",
    "@microsoft/microsoft-graph-client": "^3.0.7",
    "body-parser": "^1.20.2",
    "discord.js": "^14.12.1",
    "dotenv": "^17.2.1",
    "express-session": "^1.18.0",
    "immer": "^10.1.1",
    "mysql": "^2.18.1",
    "passport": "^0.6.0",
    "passport-facebook": "^3.0.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-twitter": "^0.1.5",
    "pg": "^8.11.3",
    "sjcl": "^1.0.8",
    "sqlite3": "^5.1.7",
    "zod": "^4.0.17",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@types/dotenv": "^6.1.1",
    "@types/express": "^5.0.3",
    "@types/lodash": "^4.17.20",
    "@types/node": "^20.19.11",
    "@types/node-cron": "^3.0.11",
    "@types/passport": "^1.0.17",
    "@types/passport-google-oauth20": "^2.0.16",
    "@types/sequelize": "^4.28.20",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "aws-sdk": "^2.1569.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "lodash": "^4.17.21",
    "nodemon": "^3.1.0",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.10",
    "semver": "^7.6.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "undici": "^6.6.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bmiller346/kanban-board-bot.git"
  },
  "bugs": {
    "url": "https://github.com/bmiller346/kanban-board-bot/issues"
  },
  "homepage": "https://github.com/bmiller346/kanban-board-bot#readme",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,css,md}": "prettier --write"
  }
}
